<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 配置抓包代理的证书信任 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" /> <!-- 信任用户安装的证书（如抓包工具的证书）-->
        </trust-anchors>
    </base-config>
    
    <!-- 针对特定域名的配置 -->
    
</network-security-config>